<?xml version="1.0" encoding="utf-8"?>
<manifest>
	<application>
	<name>微PT</name>
	<alias>torrent</alias>
	<version>0.9.3</version>
	<pw-version>9.0</pw-version>
	<description>基于PW9.0的简易PT应用，安装后在版块发帖类型中添加（种子帖）即可。</description>
	<logo>images/logo.jpg</logo>
	<type>app</type>
	<charset>UTF-8</charset>
	<website>http://7in0.me</website>
	<author-name>7IN0SAN9</author-name>
	<author-email>me@7in0.me</author-email>
	<author-icon>your icon</author-icon>
	</application>
	<res>res</res>
	<installation-service>
	</installation-service>
	<inject-services>
	<s_PwThreadType>
	<app_torrent>
	<class>EXT:torrent.service.srv.PwTorrentTypeDo</class>
	<loadway>load</loadway>
	<method>typeOfTorrent</method>
	<description>种子帖</description>
	</app_torrent>
	</s_PwThreadType>
	<c_post_run>
	<app_torrent>
	<class>EXT:torrent.service.srv.injector.PwTorrentPostInjector</class>
	<method>run</method>
	<loadway>load</loadway>
	<expression>special.get==torrent</expression>
	<description>发布种子资源页</description>
	</app_torrent>
	</c_post_run>
	<c_post_doadd>
	<app_torrent>
	<class>EXT:torrent.service.srv.injector.PwTorrentPostInjector</class>
	<method>doadd</method>
	<loadway>load</loadway>
	<expression>special.post==torrent</expression>
	<description>提交种子资源帖</description>
	</app_torrent>
	</c_post_doadd>
	<c_read_run>
	<app_torrent>
	<class>EXT:torrent.service.srv.injector.PwTorrentReadInjector</class>
	<method>run</method>
	<loadway>load</loadway>
	<expression>service:thread.info.special==torrent</expression>
	<description>种子帖阅读页</description>
	</app_torrent>
	</c_read_run>
	<s_PwThreadsDao_delete>
	<app_torrent>
	<class>EXT:torrent.service.srv.App_Torrent_PwThreadsDao_DeleteDo</class>
	<loadway>load</loadway>
	<method>app_TorrentDo</method>
	<description>删除种子贴时删除对应记录和种子文件</description>
	</app_torrent>
	</s_PwThreadsDao_delete>
	<s_PwThreadsDao_batchDelete>
	<app_torrent>
	<class>EXT:torrent.service.srv.App_Torrent_PwThreadsDao_BatchDeleteDo</class>
	<loadway>load</loadway>
	<method>app_TorrentDo</method>
	<description>批量删除种子贴时删除对应记录和种子文件</description>
	</app_torrent>
	</s_PwThreadsDao_batchDelete>
	<s_space_profile>
	<app_torrent>
	<class>EXT:torrent.service.srv.App_Torrent_Space_ProfileDo</class>
	<loadway>load</loadway>
	<method>app_TorrentDo</method>
	<description>个人资料页注入</description>
	</app_torrent>
	</s_space_profile>
	<m_PwThreadDisplay>
	<app_torrent>
	<class>EXT:torrent.service.srv.App_TorrentPwThreadDisplayDo</class>
	<description>帖子页注入</description>
	</app_torrent>
	</m_PwThreadDisplay>
	<m_PwThreadList>
	<app_torrent>
	<class>EXT:torrent.service.srv.App_TorrentPwThreadListDo</class>
	<description>帖子列表页注入</description>
	</app_torrent>
	</m_PwThreadList>
	</inject-services>
	</manifest>
